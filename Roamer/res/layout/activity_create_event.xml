<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RoamerGrey"
    tools:context=".CreateEventActivity" >

    <ImageView
        android:id="@+id/imageViewNewMessage"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:src="@drawable/gray_gradient" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/roamer" />

    <ImageButton
        android:id="@+id/imageBackFromCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewNewMessage"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:background="@color/transparent"
        android:src="@drawable/x" />

    <Spinner
        android:id="@+id/spinnerCreateNewType"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textCreateType"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/textCreateType"
        android:background="@drawable/field_entry" />

    <TextView
        android:id="@+id/textCreateDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textCreateType"
        android:layout_below="@+id/spinnerCreateNewType"
        android:layout_marginTop="32dp"
        android:text="Select Date"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textCreateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textCreateDate"
        android:layout_below="@+id/datePicker1"
        android:layout_marginTop="28dp"
        android:text="Select Time"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/spinnerCreateTime"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/spinnerCreateNewType"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textCreateTime"
        android:layout_marginRight="5dp"
        android:background="@drawable/field_entry" />

    <TextView
        android:id="@+id/textProfileTravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textCreateTime"
        android:layout_below="@+id/spinnerCreateTime"
        android:layout_marginTop="22dp"
        android:text="Select Location"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <DatePicker
        android:id="@+id/datePicker1"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_alignLeft="@+id/spinnerCreateNewType"
        android:layout_alignTop="@+id/textCreateDate" />

    <TextView
        android:id="@+id/textCreateType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2"
        android:layout_below="@+id/imageViewNewMessage"
        android:layout_marginTop="54dp"
        android:text="Select Type"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonSelectFromMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textProfileTravel"
        android:layout_alignBottom="@+id/textProfileTravel"
        android:layout_alignLeft="@+id/spinnerCreateTime"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_black"
        android:text="Select From Map"
        android:textColor="@color/DarkWhite" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButtonPostEvent"
        android:layout_alignLeft="@+id/imageBackFromCreate"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:maxLength="30"
        android:maxLines="2" />

    <TextView
        android:id="@+id/textEventLocationPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textProfileTravel"
        android:layout_alignRight="@+id/imageView2"
        android:layout_below="@+id/buttonSelectFromMap"
        android:layout_marginTop="10dp"
        android:text="Final Location"
        android:textColor="@color/DarkWhite" />

    <ImageButton
        android:id="@+id/imageButtonPostEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textProfileTravel"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:paddingBottom="10dp"
        android:src="@drawable/post" />

</RelativeLayout>
