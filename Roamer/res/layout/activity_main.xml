<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plane_bg"
    tools:context=".HomeScreenActivity" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/gray_gradient" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="6dp"
        android:background="@color/transparent"
        android:contentDescription="@string/intro_image_desc"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tag" />

    <ImageView
        android:id="@+id/imageChildImage"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/roamer" />

    <ImageView
        android:id="@+id/roamerCreateTag"
        android:layout_width="245dp"
        android:layout_height="220dp"
        android:layout_alignLeft="@+id/settingsButton"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="45dp"
        android:adjustViewBounds="true"
        android:background="@drawable/btn_gray"
        android:src="@color/DarkGrey" />

    <ImageButton
        android:id="@+id/findRoamers"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_alignTop="@+id/roamerCreateTag"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/settingsButton"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/selector_find_roamers" />

    <ImageButton
        android:id="@+id/checkEventsButton"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_alignLeft="@+id/findRoamers"
        android:layout_below="@+id/findRoamers"
        android:layout_marginTop="15dp"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/selector_events" />

    <ImageButton
        android:id="@+id/getMyRoamersButton"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_alignTop="@+id/checkEventsButton"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/checkEventsButton"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/selector_my_roamers" />

    <ImageButton
        android:id="@+id/checkInboxButton"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_alignLeft="@+id/getMyRoamersButton"
        android:layout_alignTop="@+id/findRoamers"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/selector_inbox" />

    <ImageButton
        android:id="@+id/imageButtonPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textView1"
        android:background="@color/transparent"
        android:src="@drawable/selector_post_event" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/roamerCreateTag"
        android:layout_alignTop="@+id/imageButtonPost"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="Click to create event!"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>