<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelloGoogleMaps" >

<fragment
        android:id="@+id/mymap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />

<ImageButton
    android:id="@+id/imageBackFromMap"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="18dp"
    android:background="@color/transparent"
    android:src="@drawable/x" />

<ImageButton
    android:id="@+id/imageButtonSearchMap"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignBottom="@+id/spr_place_type"
    android:layout_alignTop="@+id/spr_place_type"
    android:layout_toRightOf="@+id/spr_place_type"
    android:background="@color/DarkWhite"
    android:src="@android:drawable/ic_menu_search" />

<Spinner
    android:id="@+id/spr_place_type"
    android:layout_width="180dp"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_marginBottom="35dp"
    android:layout_marginLeft="5dp"
    android:background="@color/DarkWhite"
    android:visibility="invisible" />

<ImageView
    android:id="@+id/imageView1"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@color/transparent"
    android:src="@drawable/abc_ic_clear_search_api_holo_light" />

<EditText
    android:id="@+id/editTextMap"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/imageButtonSearchMap"
    android:layout_alignLeft="@+id/spr_place_type"
    android:layout_alignTop="@+id/spr_place_type"
    android:layout_toLeftOf="@+id/imageButtonSearchMap"
    android:background="@color/DarkWhite"
    android:ems="10"
    android:gravity="center_vertical|center_horizontal"
    android:lines="1"
    android:maxLength="20"
    android:maxLines="1"
    android:textColor="@color/DarkGrey" />

    <requestFocus />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/spr_place_type"
        android:layout_alignLeft="@+id/imageBackFromMap"
        android:layout_alignRight="@+id/imageView1"
        android:scaleType="fitCenter"
        android:src="@drawable/hr" />

</RelativeLayout> 