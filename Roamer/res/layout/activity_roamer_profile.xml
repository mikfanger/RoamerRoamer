<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/RoamerGrey"
    android:minHeight="550dp" >
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RoamerGrey"
    android:minHeight="550dp"
    tools:context=".RoamerProfileActivity" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:src="@drawable/gray_gradient" />

    <ImageButton
        android:id="@+id/imageButtonPostEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toLeftOf="@+id/imageProfilePicture"
        android:background="@color/transparent"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/imageProfilePicture"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/default_userpic" />

    <TextView
        android:id="@+id/textProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageProfilePicture"
        android:layout_below="@+id/imageProfilePicture"
        android:layout_marginTop="5dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textProfileSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textProfileName"
        android:layout_below="@+id/textProfileName"
        android:text="Sex"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/roamer" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textProfileSex"
        android:layout_alignRight="@+id/imageAddRoamer"
        android:layout_below="@+id/textProfileSex"
        android:layout_marginTop="30dp"
        android:src="@drawable/hr" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="24dp"
        android:src="@drawable/personal_info" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/field_entry" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_below="@+id/imageView6"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/field_entry" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView7"
        android:layout_below="@+id/imageView7"
        android:layout_marginTop="20dp"
        android:src="@drawable/preferences" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView8"
        android:layout_below="@+id/imageView8"
        android:layout_marginTop="14dp"
        android:scaleType="fitXY"
        android:src="@drawable/field_entry" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView9"
        android:layout_below="@+id/imageView9"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/field_entry" />

    <TextView
        android:id="@+id/textProfileAir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textProfileHotel"
        android:layout_alignTop="@+id/imageView10"
        android:layout_marginTop="10dp"
        android:text="Airline Preference"
        android:textColor="@color/DarkWhite" />

    <ImageButton
        android:id="@+id/imageButtonOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageProfilePicture"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@color/transparent"
        android:src="@drawable/x" />

    <ImageView
        android:id="@+id/imageViewNewMessage"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView9"
        android:layout_alignTop="@+id/imageView9"
        android:layout_marginTop="85dp"
        android:scaleType="fitXY"
        android:src="@drawable/field_entry" />

    <TextView
        android:id="@+id/textProfileTravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textProfileHotel"
        android:layout_alignTop="@+id/imageView9"
        android:layout_marginTop="92dp"
        android:text="Travel Status"
        android:textColor="@color/DarkWhite" />

    <TextView
        android:id="@+id/textProfileLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textProfileJob"
        android:layout_alignRight="@+id/textCreateType"
        android:layout_alignTop="@+id/imageView7"
        android:layout_marginTop="8dp"
        android:text="Location"
        android:textColor="@color/DarkWhite" />

    <TextView
        android:id="@+id/textProfileJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageRemoveRoamer"
        android:layout_alignTop="@+id/imageView6"
        android:layout_marginTop="8dp"
        android:text="Job Position"
        android:textColor="@color/DarkWhite" />

    <TextView
        android:id="@+id/textProfileHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textProfileLocation"
        android:layout_alignTop="@+id/imageView9"
        android:layout_marginTop="8dp"
        android:text="Hotel Preference"
        android:textColor="@color/DarkWhite" />

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textProfileLocation"
        android:layout_alignBottom="@+id/textProfileLocation"
        android:layout_alignLeft="@+id/textViewTravelStatus"
        android:text="Region from" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textProfileHotel"
        android:layout_alignBottom="@+id/textProfileHotel"
        android:layout_alignLeft="@+id/textViewUserName"
        android:text="Preferred Hotel" />

    <ImageView
        android:id="@+id/imageButtonLargePicture3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/imageProfilePicture"
        android:layout_centerHorizontal="true"
        android:background="@color/NewBlack"
        android:src="@drawable/default_userpic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textCreateType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageProfilePicture"
        android:layout_alignLeft="@+id/imageRemoveRoamer"
        android:layout_marginBottom="18dp"
        android:text="Roaming Since"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textRoamerDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageProfilePicture"
        android:layout_alignRight="@+id/textCreateType"
        android:text="Date"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textProfileTravel"
        android:layout_alignBottom="@+id/textProfileTravel"
        android:layout_alignLeft="@+id/textView4"
        android:text="Travel Status" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textProfileAir"
        android:layout_alignBottom="@+id/textProfileAir"
        android:layout_alignLeft="@+id/textView3"
        android:text="Preferred Airline" />

    <ImageButton
        android:id="@+id/imageRemoveRoamer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textProfileName"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textView4"
        android:background="@color/transparent"
        android:src="@drawable/remove_roamer" />

    <TextView
        android:id="@+id/textViewTravelStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textProfileJob"
        android:layout_alignBottom="@+id/textProfileJob"
        android:layout_toRightOf="@+id/imageButtonOut"
        android:text="Current Job" />

</RelativeLayout>

</ScrollView>